main.asm:
     1                          start:
     2  0000  cd0600                call gpio_echo
     3                          
     4                          end:
     5  0003  c3cf00                jp PROMPT
     6                          
     7                          
     8                          gpio_echo:
     9                              ; get a character from USB - will wait for a character
    10  0006  cd2300                call getchar
    11                              ; escape?
    12  0009  fe1b                  cp '\e'
    13                              ; yes - end
    14  000b  c8                    ret z
    15                              ; echo to console
    16  000c  cd4500                call putchar
    17                              ; send to SPI
    18  000f  d306                  out (GPIO_OUT),a
    19                              ; print a spacer
    20  0011  3e20                  ld a,' '
    21  0013  cd4500                call putchar
    22                              ; wait
    23  0016  cd2300                call getchar
    24                              ; read back from SPI
    25  0019  db07                  in a,(GPIO_IN)
    26                              ; stash value
    27  001b  47                    ld b,a
    28                              ; print hex value
    29  001c  cdf401                call putchar_hex
    30                              ; print a spacer
    31  001f  3e20                  ld a,' '
    32  0021  cd4500                call putchar
    33                              ; restore value
    34  0024  78                    ld a,b
    35                              ; print value
    36  0025  cd4500                call putchar
    37  0028  3e0a                  ld a,'\n'
    38  002a  cd4500                call putchar
    39                              ; repeat
    40  002d  18d7                  jr gpio_echo
    41                          
